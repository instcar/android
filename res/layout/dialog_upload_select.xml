<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
    android:background="@drawable/bg_gray_square"
    android:gravity="center"
    android:minHeight="250dip"
    android:orientation="vertical"
    android:padding="0dip" >

    <Button
        android:id="@+id/uploadbutton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_bule"
        android:text="查看图片样例"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/uploadbutton2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_addcar"
        android:text="拍摄照片"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/uploadbutton3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_addcar"
        android:text="从相册中选择照片"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>